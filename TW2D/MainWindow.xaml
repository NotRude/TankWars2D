<Window x:Class="TW2D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TW2D"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="900" KeyDown="Window_KeyDown" Background="Black">
    <Grid x:Name="grid">
        <Canvas x:Name="Field" Height="450" Width="900"/>
        <TextBlock Width="50" Height="50" Name="TankHP1TB" Margin="10,10,10,10" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="20"/>
        <TextBlock Width="50" Height="50" Name="TankHP2TB" Margin="10,10,10,10" VerticalAlignment="Top" HorizontalAlignment="Right" FontSize="20"/>
        <TextBlock Width="800" Height="100" Name="GameOverTB" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="50" TextAlignment="Center">Нажмите Enter</TextBlock>
    </Grid>
</Window>
